    <script>
        // Muscle Contraction Animation
        let currentMuscleSlide = 0;
        let muscleAnimationSpeed = 2000; // 2 seconds per slide
        let muscleAnimationInterval;

        const muscleSlides = document.querySelectorAll('.muscle-slide');

        function showMuscleSlide(n) {
            muscleSlides[currentMuscleSlide].classList.remove('active');
            
            currentMuscleSlide = n;
            if (currentMuscleSlide >= muscleSlides.length) currentMuscleSlide = 0;
            if (currentMuscleSlide < 0) currentMuscleSlide = muscleSlides.length - 1;
            
            muscleSlides[currentMuscleSlide].classList.add('active');
        }

        function nextMuscleSlide() {
            showMuscleSlide(currentMuscleSlide + 1);
        }

        function startMuscleAnimation() {
            if (muscleAnimationInterval) clearInterval(muscleAnimationInterval);
            muscleAnimationInterval = setInterval(nextMuscleSlide, muscleAnimationSpeed);
        }

        // Initialize muscle animation when page loads
        document.addEventListener('DOMContentLoaded', function() {
            if (muscleSlides.length > 0) {
                startMuscleAnimation();
            }
        });
    </script>
    

