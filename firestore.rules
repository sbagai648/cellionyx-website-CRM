rules_version = "2";
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isAdmin() {
      return isSignedIn() && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Admin';
    }
    
    function isSalesRep() {
      return isSignedIn() && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['Sales Rep', 'Admin'];
    }
    
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    // Prospects collection
    match /prospects/{prospectId} {
      // Anyone authenticated can read prospects
      allow read: if isSignedIn();
      
      // Only admins and sales reps can create/update prospects
      allow create: if isSalesRep();
      allow update: if isSalesRep();
      
      // Only admins can delete prospects
      allow delete: if isAdmin();
      
      // Activities subcollection
      match /activities/{activityId} {
        allow read: if isSignedIn();
        allow create: if isSalesRep();
        allow update: if false; // Activities should not be edited
        allow delete: if isAdmin();
      }
    }
    
    // Users collection
    match /users/{userId} {
      // Users can read their own profile, admins can read all
      allow read: if isOwner(userId) || isAdmin();
      
      // Only admins can create users
      allow create: if isAdmin();
      
      // Users can update their own profile (except role), admins can update all
      allow update: if (isOwner(userId) && !request.resource.data.diff(resource.data).affectedKeys().hasAny(['role'])) || isAdmin();
      
      // Only admins can delete users
      allow delete: if isAdmin();
    }
    
    // Appointments collection
    match /appointments/{appointmentId} {
      allow read: if isSignedIn();
      allow create: if isSalesRep();
      allow update: if isSalesRep();
      allow delete: if isAdmin();
    }
    
    // Credits collection
    match /credits/{creditId} {
      allow read: if isSignedIn();
      allow create: if isAdmin();
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }
    
    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}